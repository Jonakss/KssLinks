head
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css")
    link(rel="stylesheet" href="style.css")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous")

body
    div.container
        section.row.g-0
            div.col-md-3
                figure
                    img(src='https://dummyimage.com/150x150/000/fff').figure-img.img-fluid.rounded-circle
            div.col
                p #[strong #{name}]
                p desc
        div.container
            div.list-group.w-auto
                each link in links
                    a(href=link.url).list-group-item.list-group-item-action.d-flex.gap-3.py-3
                        h1.flex-shrink-0
                            i.bi.bi-github
                        div.d-flex.gap-2.w-100.justify-content-between
                            div
                                h6.mb-0 #{link.text}
                                p.mb-0.opacity-75 #{link.url}
                        
        footer.footer.mt-auto.py-3.bg-light
            div.container
                p.text-muted #[strong KssLinks] by Jonakss